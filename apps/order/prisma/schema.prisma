generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id String @id @default(uuid())
  exeternalId String
  email String
  orders Order[]
  @@map("customers")
}

model Product {
  id String @id @default(uuid())
  name String
  price Float
  exeternalId String
  bar_code String

  orderItems OrderItems[]
  @@map("products")
}

model Order {
  id String @id @default(uuid())
  customer Customer @relation(fields: [customerId], references: [id])
  createdAt DateTime @default(now())
  customerId String

  orderItems OrderItems[]
  @@map("orders")
}

model OrderItems {
  id String @id @default(uuid())
  product Product @relation(fields: [productId], references: [id])
  order Order @relation(fields: [orderId], references: [id])
  quantity Float
  productId String
  orderId String

  @@map("orders_items")
}
